REPLACE
{% form 'reset_account_password', context_name: 'f' %}
WITH
{% form 'reset_password' %}
END

REPLACE
{% form_field 'f.input',  'password', {"placeholder": "password"} %}
WITH
<div class="form-item">
  <label class="string required control-label" for="password"><abbr title="required">*</abbr> Password</label>
  <input class="string required input-text" id="password" placeholder="password" name="website_user[password]" size="50" type="password">
</div>
END

REPLACE
{% form_field 'f.input',  'password_confirmation', {"placeholder": "password confirmation"} %}
WITH
<div class="form-item">
  <label class="string required control-label" for="password_confirmation"><abbr title="required">*</abbr> Re-enter password</label>
  <input class="string required input-text" id="password_confirmation" placeholder="password confirmation" name="website_user[password_confirmation]" size="50" type="password">
</div>
END

REPLACE
{% form_field 'f.submit', 'reset password', {"class": "custom-button btn-red"} %}
WITH
<input type="submit" class="custom-button btn-red" value="Reset password"/>
END
