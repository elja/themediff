REPLACE
{% form 'resend_account_confirmation', context_name: 'f' %}
WITH
{% form 'resend_confirmation' %}
END

REPLACE
{% form_field 'f.input', 'email' %}
WITH
<div class="form-item">
  <label class="string required control-label" for="email"><abbr title="required">*</abbr> Email address</label>
  <input class="string required input-text" id="email" name="website_user[email]" placeholder="email" size="50" type="text">
</div>
END

REPLACE
{% form_field 'f.submit', 'Submit', {"class": "btn custom_btn custom-button btn-green"} %}
WITH
<input type="submit" class="btn custom_btn custom-button btn-green" value="Submit"/>
END
