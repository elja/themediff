REPLACE
{% form 'recover_account_password', context_name: 'f' %}
WITH
{% form 'recover_password' %}
END

REPLACE
{% form_field 'f.input', 'email', {"label": "Email address", "placeholder": "email"} %}
WITH
<div class="form-item">
  <label class="string required control-label" for="email"><abbr title="required">*</abbr> Email address</label>
  <input class="string required input-text" id="email" name="website_user[email]" placeholder="email" size="50" type="text">
</div>
END

REPLACE
{% form_field 'f.submit', 'Reset password', {"class": "btn custom_btn custom-button frgt_btn btn-green"} %}
WITH
<input type="submit" class="btn custom_btn custom-button frgt_btn btn-green" value="Reset password"/>
END
