OVERWRITE
<div class="try-it-on-label">
    <label>try it on!</label>
</div>
<div class="try-it-on-controller"></div>

{% capture try_it_on_dialog %}
<div class='try-it-on-dialog-content'>
    <div class='hotspot-preview-images images-container'>
        <div class="images items">
            {% for hot_spot_preview_image in hot_spot_preview_images %}
                {% include "hot_spot_preview_image", image: hot_spot_preview_image %}
            {% endfor %}
        </div>
    </div>
    <div class='try-it-on-preview-area try-it-on-tab-body'>
        <div class="hot-spot-preview-image-image">
            <div class="hot-spot-image-container">
                <img src="{{ 'no-image.jpg' | asset_url }}" class='preview-hot-spot-image' />
            </div>
        </div>
        <div class="hot-spot-setting-container">
        </div>
    </div>
    <div class='hotspot-images images-container'>
        <div class="images items">
            {% for image in hot_spot_images %}
            <div class="image-wrapper left-arrow item" data-image='{{ image.preview_url }}' id='{{ image | dom_id }}' data-id="{{ image.id }}">
                <img src="{{ image.thumb_url | escape_javascript }}" />
            </div>

            {% endfor %}
        </div>
    </div>
    <div class='upload-form'>
        {% form 'hot_spot_preview_upload' %}
            <input type="file" name="hot_spot_preview[file]"/>
            <input type="hidden" name="hot_spot_preview[hot_spot_type_id]" value="{{ product.hot_spot_type_id }}"/>
        {% endform %}
    </div>
</div>
{% endcapture %}
<script>
    $('div.try-it-on-controller').hide().data('controller',
            new window.TryItOnController("{{ try_it_on_dialog | escape_javascript }}", {{ product.hot_spot_type_id }},
            '{{ product.name | escape_javascript }}', {{ shop.custom_try_it_on_upload_enabled? }}, {paginationStep: 1}));
</script>
END
