/*----------------*/
/* GENERAL */
/*----------------*/

/*----------------*/
/* HEADER */
/*----------------*/
.search-wrapper, .account-links{
	margin: 0px;
}



/*----------------*/
/* NAVIGATION */
/*----------------*/
#mid-menu{
	/* Permalink - use to edit and share this gradient: http://colorzilla.com/gradient-editor/#bbdc80+0,9aca40+20,9aca40+100,bbdc80+100 */
	background: #bbdc80; /* Old browsers */
	background: -moz-linear-gradient(top,  #bbdc80 0%, #9aca40 20%, #9aca40 100%, #bbdc80 100%); /* FF3.6-15 */
	background: -webkit-linear-gradient(top,  #bbdc80 0%,#9aca40 20%,#9aca40 100%,#bbdc80 100%); /* Chrome10-25,Safari5.1-6 */
	background: linear-gradient(to bottom,  #bbdc80 0%,#9aca40 20%,#9aca40 100%,#bbdc80 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#bbdc80', endColorstr='#bbdc80',GradientType=0 ); /* IE6-9 */

	border-radius: 5px;

}

#mid-menu ul.main-nav.navigation-menu{
	text-align: left;
	display: inline-block;
}

#mid-menu a.cart, #mid-menu a.phone, #mid-menu a.balance-info{
    display: inline-block;
    float: none;
    margin: 0px;
}

#mid-menu ul.main-nav.navigation-menu > li > a,
#mid-menu a.cart, #mid-menu a.balance-info, #mid-menu a.phone,
#mid-menu .account-links a{
	line-height: 52px;
	color: #FFF;
	border: none;
}

#mid-menu ul.main-nav.navigation-menu > li > a:hover,
#mid-menu a.cart:hover, #mid-menu a.balance-info:hover,  #mid-menu a.phone:hover,
#mid-menu .account-links a:hover{
	background-color: #badc7e;
}

#mid-menu .account-links{
	display: inline-block;
    float: none;
    margin: 0px;
    height: auto;
    line-height: normal;
}

#mid-menu .account-links a{
	display: inline-block;
	margin: 0px;
	padding: 0px 15px;
	text-transform: uppercase;
}



/*----------------*/
/* CATEGORY NAVIGATION */
/*----------------*/
.category-navigation{

	/* Permalink - use to edit and share this gradient: http://colorzilla.com/gradient-editor/#4669a3+0,5584d6+20 */
	background: #4669a3; /* Old browsers */
	background: -moz-linear-gradient(top,  #4669a3 0%, #5584d6 20%); /* FF3.6-15 */
	background: -webkit-linear-gradient(top,  #4669a3 0%,#5584d6 20%); /* Chrome10-25,Safari5.1-6 */
	background: linear-gradient(to bottom,  #4669a3 0%,#5584d6 20%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#4669a3', endColorstr='#5584d6',GradientType=0 ); /* IE6-9 */

	border-radius: 10px;
	border: 3px solid #5584D6;
}

.category-navigation h2{
    color: #FFF!important;
    margin: 15px 0px 30px;
    text-align: center;
    font-size: 14px;
    font-weight: bold;
    text-transform: uppercase;
}

.category-navigation .container ul.level-0 > li > a{
	font-weight: bold;
	font-size: 13px;
}



/*----------------*/
/* CONTENT */
/*----------------*/
.main{
    padding-top: 15px;
}

.product-list .product,
.product-list .product.featured{
	margin-right: 32px;
}

.product-list .product .footer label.product-name,
.product-list .product.featured .footer label.product-name{

}

.product-page .product-page-main{
	padding: 20px;
}

div.product-wrapper .product-right-section{
	width: 50%;
}

.product-page .total-info > div.add-to-cart-area{
	float: none;
}

.product-page .total-info > div.add-to-cart-area .btn{
	width: 100%;
}

/*----------------*/
/* ELLIPSE FIXES */
/*----------------*/
.recently-viewed-products .product,
.related-products .product{
	min-height: 225px;
}

.recently-viewed-products .product .footer label.product-name a,
.related-products .product .footer label.product-name a{
	width: auto;
	overflow: visible;
	text-overflow: inherit;
	white-space: normal;
}

.recently-viewed-products .product .footer,
.related-products .product .footer{
	max-height: none;
}

.form-radio label{
	width: 100%;
	overflow: visible;
}

/*----------------*/
/* FOOTER */
/*----------------*/
#footer{
	background: url({{ 'footer.png' |asset_url }}) repeat-x top center #FFF;
}

.footer-main{
	height: auto;
	min-height: inherit;
    padding: 100px 0px 50px;
}

.footer-block{
	float: none;
	width: 100%;
	text-align: center;
}

.footer-block *{
	color: #FFF!important;
}

.footer-main ul.main-nav.navigation-menu,
.footer-main a.cart, .footer-main a.balance-info, .footer-main .account-links,
.footer-main .account-links a{
	display: inline-block;
	float: none;
	margin: 0px;
}

.footer-main ul.main-nav.navigation-menu li a,
.footer-main .account-links a,
.footer-main a.cart, .footer-main a.balance-info{
	border: none;
	text-transform: uppercase;
	padding: 0px 10px;
}



/*----------------*/
/* MEDIA QUERIES */
/*----------------*/
@media (max-width: {{ settings.main_container_width }} ){
	#carousel-wrapper, #carousel, #carousel .items > li{
		width: calc(100vw - 220px)!important;
		max-height: {{ settings.carousel_h }}px!important;
		height:  calc((100vw - 220px) / ({{ settings.carousel_w }} / {{ settings.carousel_h }}) - 10px)!important;
	}
}

@media (max-width: 1025px){
	div.product-wrapper .product-right-section{
		width: auto;
	}
}

@media (min-width: 661px){

	.navigation-bar{
		display: none;
	}

	#header{
		background: transparent;
	    padding: 0px 0px 20px;
	}

	#header .account-links{
		display: none;
	}

	.search-wrapper{
	    margin: 50px 0px 0px;
	}

	.search input[type="text"]{
		background: #FFF;
	}

	#right_content {
	    width: calc(100% - 220px)!important;
	    padding: 0px;
	}

	
}

@media (max-width: 660px){
	#carousel-wrapper, #carousel, #carousel .items > li{
		width: calc(100vw - 20px)!important;
		max-height: {{ settings.carousel_h }}px!important;
		height:  calc((100vw - 20px) / ({{ settings.carousel_w }} / {{ settings.carousel_h }}) - 10px)!important;
	}

	div.top-area .logo{
		width: 100%;
		max-width: 440px;
		background-size: contain;
		background-repeat: no-repeat;
	}


	#mid-menu{
		display: none;
	}

	#right_content{
		width: 100%!important;
	}

	.main{
		float: none;
	}

	.account-links{
		height: auto;
		line-height: normal;
	}

	.account-links a,
	#searchdropdown{
		padding: 20px 10px;
		display: inline-block;
	}

	.category-navigation{
		border-radius: 0px 0px 10px 10px;
	}
	
}

