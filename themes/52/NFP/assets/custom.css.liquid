body {
  font-weight: normal;
  line-height: 25px;
}

p {
  color: #666;
}


.home-content {
  max-width: 1000px;
  width: 720px;
  margin: 15px 20px 40px 30px;

  font-size: 21px;

  float: left;
}
.home-sidebar {
  margin-top: 15px;
  width: 182px;
  float: right;
}
.home-sidebar > p {
  font-size: 10px;
}
.home-sidebar > h2 > span {
  color: #666;
  font-size: 21px;
  padding-left: 0;
}

h3 > span.bio-name { 
  color: #7ba482; 
  font-size: 14px;
  font-weight: bold;
}
/*================*/
  BIOS DROPDOWN
/*================*/

.bio-dropdown{
    position: relative;
    display: inline-block;
    font-size: 16px;
}

input#toggle-1, #toggle-2, #toggle-3, #toggle-4, #toggle-5[type=checkbox] {
    display: none;
}
#toggle-1[type=checkbox]:checked ~ #one { display: block;   }
#toggle-2[type=checkbox]:checked ~ #two { display: block; }
#toggle-3[type=checkbox]:checked ~ #three { display: block; }
#toggle-4[type=checkbox]:checked ~ #four { display: block; }
#toggle-5[type=checkbox]:checked ~ #five { display: block; }


/* Click to expand button */

label.bio-label {
    display: block !important;
    color: #002176;
/*  padding: 0px 20px;  */
    font-size: 18px;
  text-align: center;
    cursor: pointer !important;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
   
}


ul.bio {
  /*  position: absolute; */
  display: none;
  list-style: none;
  text-align: center;
  //width: 200px;
  margin:0;
  font-size: 12px;
  padding:5px 0px 0 0;
line-height:14px;
  /*  z-index: 1; */


}

ul.bio > li{
 /* padding: 15px; */
    margin: 0;
    cursor: pointer;
    list-style-type: none;
}

