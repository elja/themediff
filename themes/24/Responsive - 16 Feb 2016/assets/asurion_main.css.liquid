/*---------------------*/
/* FONTS */
/*---------------------*/
ul.main-nav.navigation-menu > li > a,
a.cart, a.phone,
.account-links a,
#home h1, #home h3{
	font-family: 'Varela Round', sans-serif;
}

/*---------------------*/
/* GENERAL */
/*---------------------*/

/*---------------------*/
/* NAVIGATION */
/*---------------------*/
.search-wrapper, .account-links{
	margin: 0px;
}

.account-links a,
.account-links ul.main-nav.navigation-menu > li > a,
.account-links a.cart, .account-links a.balance-info{
	padding: {{ settings.navbar_link_padding}};
}

.account-links a:hover{
  color: {%if settings.navbar_top_level_link_color_hover.size != 0%}{{ settings.navbar_top_level_link_color_hover }}{%else%}inherit{%endif%};
}

a.cart, a.phone{
	border: none;
}


/*---------------------*/
/* CATEGORY NAVIGATION */
/*---------------------*/
.category-navigation .container ul.level-0{
    padding: 0px 0px 2px;
    border-bottom: 1px solid #FFF;
    margin-bottom: 10px;
}

.category-navigation ul.level-0 > li > a:hover{
	font-weight: bolder;
	text-decoration: none;
}

/*---------------------*/
/* CATALOG */
/*---------------------*/
.product-list .product,
.product-list .featured{
    margin: 0px 46px 22px;
    border: none;
}

.product-list .product .image-carousel,
.product-list .featured .image-carousel{
	border: none;
}

.product-list .product .footer,
.product-list .product .footer{
	text-align: center;
}

.product-list .product .footer label.product-name,
.product-list .featured .footer label.product-name,
.product-list .product .footer label.product-price,
.product-list .featured .footer label.product-price{
	padding: 0px;
	margin: 0px;
	max-width: none;
	min-height: inherit;
}

.product-list .product .footer label.product-price,
.product-list .featured .footer label.product-price{
	font-weight: normal;
	font-size: 10px;
}

/*---------------------*/
/* PRODUCT */
/*---------------------*/
.product-page .product-header {
    padding-bottom: 10px;
    margin-bottom: 10px;
    border-bottom: 3px solid #7FBA00;
}

div.product-wrapper .product-right-section{
	width: 50%;
}

.product-page table.product-summary,
.product-page table.product-quantity{
	width: 320px;
}

.product-page .total-info > div.add-to-cart-area{
	float: none;
	margin: 0px 0px 10px;
}

.recently-viewed-products .product .footer label.product-name,
.related-products .product .footer label.product-name,
.recently-viewed-products .product .footer label.product-price,
.related-products .product .footer label.product-price{
	font-size: 12px;
	font-weight: normal
}

 .recently-viewed-products .product .footer label.product-price.product-min,
 .related-products .product .footer label.product-price.product-min{
 	display: none;
}

.view_pdf{
	    text-transform: uppercase;
	    font-size: 14px;
	    width: 140px;
	    margin-bottom: 5px;
	    padding: 7px 6px;
	    display: block;
	    font-weight: bolder;
		color: #FFF!important;
	}

/*---------------------*/
/* FOOTER */
/*---------------------*/
.footer-main{
	height: auto;
	min-height: 100px;
}

.footer-block{
	width: 100%;
	float: none;
	text-align: center;
}

.footer-main .main-nav.navigation-menu li{
	display: inline-block;
}

.footer-main ul.main-nav.navigation-menu,
.footer-block p{
	display: inline-block;
}

.footer-main ul.main-nav.navigation-menu li a{
	color: {%if settings.footer_link_color.size != 0%}{{ settings.footer_link_color }}{%else%}inherit{%endif%};
	font-size: {{ settings.footer_font_size }};
	border-right: 1px solid;
	border-bottom: none;
	padding: 0px 5px 0px 0px;
}

.footer-main ul.main-nav.navigation-menu li a:hover{
	color: {%if settings.footer_link_rollover_color.size != 0%}{{ settings.footer_link_rollover_color }}{%else%}inherit{%endif%};
}

/*---------------------*/
/* HOME PAGE */
/*---------------------*/
.col{float: left;}
.col2{float: right;}
.col_1{
  width: 100%
}

.col_8{
  width: 80%;
}

.col_6{
  width: 66.666%;
}

.col_2{
  width: 50%;
}
.col_2_2{
  width: 50%;
}
.col_3{
  width: 33.333333%;
}

.col_4{
	width: 25%;
}

.col_5{
	width: 20%;
}


.col img{
  width:100%;
}

.clrfix:after {
	visibility: hidden;
	display: block;
	font-size: 0;
	content: " ";
	clear: both;
	height: 0;
}

#home{
	background: url('{{ "home-bg.png" | asset_url }}') center no-repeat;
	background-size: cover;
	padding: 3.5em 0px 0px;
}
#home_2{
	background: url('{{ "home-bg2.png" | asset_url }}') center no-repeat;
	background-size: cover;
	padding: 3.5em 0px 0px;
}

.wrapper{
	width: 100%;
	max-width: 940px;
	margin: 0 auto
}

#home h1, #home_2 h1{
	font-size: 50px;
    color: white;
    margin: 0px 0px 25px;
}

#home p, #home_2 p{
	color: #FFF;
	font-weight: bold;
    font-size: 14px;
    line-height: 20px;
}

#home a, #home a:link, #home_2 a, #home_2 a:link{
	color: #000;
	font-weight: bold;
    font-size: 14px;

}

#home .row .col_2:nth-child(2){
	text-align: right;
}

#home .row .col_2:nth-child(2) img{
	width: 75%;
    float: right;
}
#home_2 .row .col_2_2:nth-child(2){
	text-align: right;
}

#home_2 .row .col_2_2:nth-child(2) img{
	width: 75%;
    float: left;
}

#home h3{
	color: #7FBA00;
    font-size: 36px;
    margin: 1em 0px;
}

#home .product-list{
	background: #FFF;
	border: 3px solid black;
}

#home .home-product a{
    text-decoration: none;
}

#home .home-product .inner{
	padding: 3px 5px;
}

#home .home-product img{
	max-width: 85px;
	height: auto;
}

#home .home-product h3{
	margin: 7px 7px 7px 0;
    color: #7FBA00;
    font-size: 24px;
    line-height: 26px;
    font-family: inherit;
    font-weight: bold;
}

#home .home-product p{
    padding: 5px;
    border: 1px solid #7FBA00;
    margin: 5px 0px;
    color: #000;
    font-size: 12px;
    font-weight: normal;
    line-height: normal;
}

#home .home-product:nth-child(1) p.description{
	content: "{{ settings.feat1-description }}";
}

@media(max-width:660px){
	.col_4{
		width: 50%;
	}

	.col_2{
		width: 100%;
	}
.col_2_2{
		width: 100%;
	}

	#home .row .col_2:nth-child(2), #home_2 .row .col_2:nth-child(2){
		text-align: center;
	}

	#home .home-product h3{
	    /*font-size: 18px;*/
	    /*line-height: 22px;*/
        /*margin: 0px 7px;*/
	}

	#home .home-product.col_3{
		width: 100%;
	}
}

@media(max-width:375px){
	.col{
		float: none;
	}

    .col_2, .col_3, .col_4, .col_5, .col_2_2{
      width: 100%;
    }

}
/*----------------*/
/* ELLIPSE FIXES */
/*----------------*/
.recently-viewed-products .product,
.related-products .product{
	min-height: 225px;
}

.recently-viewed-products .product .footer label.product-name a,
.related-products .product .footer label.product-name a{
	width: auto;
	overflow: visible;
	text-overflow: inherit;
	white-space: normal;
}

.recently-viewed-products .product .footer,
.related-products .product .footer{
	max-height: none;
}

.form-radio label{
	width: 100%;
	overflow: visible;
}
/*---------------------*/
/* MEDIA QUERIES */
/*---------------------*/
@media (max-width: 840px){
	div.product-wrapper .product-right-section{
		width: 100%;
	}
}

@media (min-width: 661px){
	.navigation-bar{
		display: none;
	}

	.search input[type="text"]{
		background-color: transparent;
	    width: 100px;
	    margin-left: 15px;

		-webkit-transition: background-color 0.25s ease;
		-moz-transition: background-color 0.25s ease;
		-ms-transition: background-color 0.25s ease;
		-o-transition: background-color 0.25s ease;
		transition: background-color 0.25s ease;

	}

	.search input[type="text"]:focus{
		background-color: #FFF;

	}
}

@media (max-width: 660px){
	.account-links a.cart,
	.account-links a.balance-info{
		display: none;
	}

	.category-navigation .container ul.level-0 > li > a{
		padding: 10px;
	}

	ul.main-nav.navigation-menu li a,
	a.cart, a.phone,
	a.balance-info{
		float: none;
		text-align: center;
	    padding: 10px 0px;
	    border-bottom: 1px solid rgba(255,255,255,0.1);
	}


}

