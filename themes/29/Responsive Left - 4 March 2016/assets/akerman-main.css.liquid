/*----------------*/
/* GENERAL */
/*----------------*/
*{
  font-family: "Lucida Grande", Verdana, Arial, sans-serif!important
}

.fa{
  font-family: "FontAwesome"!important;
}

.btn_2.custom-btn.cancel_pass{
  color: #FFF!important;
}

/*----------------*/
/* NAVIGATION */
/*----------------*/

/*----------------*/
/* HEADER */
/*----------------*/
.account-links{
  height: auto;
  line-height: normal;
  float: none;
  display: block;
}

.account-links a,
.account-links a:link,
.account-links a.cart,
.account-links a.balance-info{
  color: #024281;
  font-size: 14px;
  border-right: 1px solid;
  margin: 0px;
  padding: 0px 7px;

  float: none;
  display: inline-block;
}

.account-links i{
  color: #e51837;
}

.search-wrapper{
  /*float: none;*/
}

#header ul.main-nav.navigation-menu{
  border-top: 2px solid #DDD;
    padding: 5px 0px;
    margin: 8px 0px;
    text-align: left;

}

#header ul.main-nav.navigation-menu > li > a{
    font-size: 10px;
    padding: 0px 5px;
    color: #024281;
  border-right: 1px solid;

}

/*----------------*/
/* CATEGORY NAV */
/*----------------*/
.category-navigation .container{
  border: 1px solid #e51837;
}

.category-navigation h2{
  font-size: 12px;
  color: #FFF!important;
  background: #e51837;
  text-align: center;
  font-weight: bold;
  padding: 3px 0px;
}

.category-navigation .container ul.level-0 > li > a{
    padding: 0px 15px;
    margin: 10px 0px;
    font-weight: bold;
}

/*----------------*/
/* CONTENT */
/*----------------*/
#right_content{
    width: calc(100% - 240px);
    padding: 10px 20px;
}

.product-list .product,
.product-list .product.featured{
  margin-right: 20px;
  border: none;
}

.product-list .product .image-carousel,
.product-list .product.featured .image-carousel{
  border: none;
}

.product-list .product .footer,
.product-list .product.featured .footer{
  text-align: center;
}

.product-list .product.featured .product-price,
.product-list .product .product-price{
  text-align: center;
}

.product-list .product .footer label.product-name,
.product-list .product.featured .footer label.product-name{
  padding: 0px;
  max-width: none;
  text-align: center;
}

.product-list .product .footer label.product-name a,
.product-list .product.featured .footer label.product-name a{
  font-weight: bold;
  color: #e51837!important;
}

.product-list .product .footer label.product-price,
.product-list .product.featured .footer label.product-price{
  padding: 0px;
  color: #000;
  font-weight: normal;
  font-size: 10px;
}

.recently-viewed-products .product .footer label.product-price,
.related-products .product .footer label.product-price{
  text-align: center;
  padding: 0px;
}
/*----------------*/
/* CHECKOUT */
/*----------------*/
.shipping .form-radio{
	overflow: visible;
}

a.edit-shipping, a.edit-budget a.edit-payment, a.edit-custom-data-collection{
	color: #FFF!important;
}

/*----------------*/
/* FOOTER */
/*----------------*/
.footer-main{
  border-top: 2px solid #DDD;
}

.footer-main ul.main-nav.navigation-menu{
  text-align: left;
  margin: 0px 0px 5px;
}

.footer-main ul.main-nav.navigation-menu > li > a{
  color: #6d7677;
  padding: 0px 7px 0px 0px;
  border-right: 1px solid;
  font-size: 10px;
}

.footer-block{
  width: auto;
}
/*-----------------*/
/* REMOVE ELLIPSES */
/*-----------------*/
.recently-viewed-products .product,
.related-products .product{
  min-height: 225px;
}

.recently-viewed-products .product .footer label.product-name a,
.related-products .product .footer label.product-name a{
  width: auto;
  overflow: visible;
  text-overflow: inherit;
  white-space: normal;
}

.recently-viewed-products .product .footer,
.related-products .product .footer{
  max-height: none;
}

.form-radio label{
  width: 100%;
  overflow: visible;
}
/*----------------*/
/* MEDIA QUERIES */
/*----------------*/
@media (max-width: {{ settings.main_container_width }} ){
  #carousel-wrapper, #carousel, #carousel .items > li{
    width: calc(100vw - 300px)!important;
    max-height: {{ settings.carousel_h }}px!important;
    height:  calc((100vw - 300px) / ({{ settings.carousel_w }} / {{ settings.carousel_h }}) - 10px)!important;
  }

  .main{
    float: none;
  }
}


@media (min-width: 661px){
  body{
    border-top: 30px solid #e51837;
  }

  .navigation-bar{
    display: none;
  }

  div.top-area .logo{
    margin-top: 20px;
  }

}

@media (max-width: 660px){
  #header ul.main-nav.navigation-menu,
  .account-links a.cart,
  .account-links a.balance-info{
    display: none;
  }

  #right_content{
    width: auto!important;
  }

  .account-links a{
    border: none!important;
      padding: 10px 7px 20px!important;
  }

  .footer-main{
    padding: 10px 10px 0px;
  }

  .footer-main .main-nav.navigation-menu li{
    display: inline-block;
  }

  .right,
  .left{
    float: none;
  }
}