/*--------------------*/
/* GENERAL */
/*--------------------*/
body{
	border-top: 20px solid #464646;
}

*{
	font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif!important;
}

.fa{
	font-family: "FontAwesome"!important;
}

#wrapper > div.content{
	padding: 10px 0px!important;
}

/*--------------------*/
/* NAVIGATION */
/*--------------------*/
ul.main-nav.navigation-menu {
    text-align: left;
    float: left;
}

.account-links{
	margin: 0px 2px;
	display: inline-block;
	float: left;
	height: auto;
	line-height: normal;
}

a.cart, a.balance-info{
	float: left;
}

ul.main-nav.navigation-menu > li > a,
.account-links a,
a.cart, a.balance-info{
	border: none;
	background: #FFF;
	margin: 0px 2px 0px 0px;
	padding: 3px 10px;
	display: inline-block;
}

/*--------------------*/
/* CATEGORY NAVIGATION */
/*--------------------*/
#category-navigation h2 {
    font-size: 15px;
    border-bottom: solid 2px #f68024;
    font-weight: bold;
    color: #f68024;
    padding: 0px 0px 5px;
    width: calc(100% - 10px);
    margin-bottom: 10px;
}
/*--------------------*/
/* CATALOG */
/*--------------------*/
.product-list .product,
.product-list .featured{
	width: 205px;
	margin-right: 13px;
}

.product-list .product .image-carousel,
.product-list .featured .image-carousel,
.recently-viewed-products .product .image-carousel,
.related-products .product .image-carousel{
	border: none;
}

.product-list .product .footer label.product-name,
.product-list .featured .footer label.product-name,
.recently-viewed-products .product .footer label.product-name,
.related-products .product .footer label.product-name{
	font-size: 12px;
	padding: 0px;
	margin: 0px;
	max-width: none;
	text-align: center;
	min-height: inherit;
}	

.product-list .product .footer label.product-price,
.product-list .featured .footer label.product-price,
.recently-viewed-products .product .footer label.product-price,
.related-products .product .footer label.product-price{
	font-size: 10px;
	padding: 0px;
	margin: 0px;
	max-width: none;
	text-align: center;
	font-weight: normal;
	line-height: normal;
}

/*--------------------*/
/* CART LOGIN */
/*--------------------*/
.item-area{
	padding: 0 2%;
}

/*--------------------*/
/* PRODUCT */
/*--------------------*/
.product-page .product-page-main{
	padding: 0px;
}

div.product-wrapper .product-right-section{
	width: 50%;
}

.product-page .total-info > div.add-to-cart-area {
    float: none; 
    margin: 0px 0px 10px;
}

.product-page .product-page-right{
	margin: 0px!important;
}

/*--------------------*/
/* MEDIA QUERIES */
/*--------------------*/
@media (max-width: {{ settings.main_container_width }}){
	#carousel-wrapper, #carousel, #carousel .items > li{
		width: calc(100vw - 200px)!important;
		max-height: {{ settings.carousel_h }}px!important;
		height:  calc((100vw - 220px) / ({{ settings.carousel_w }} / {{ settings.carousel_h }}) - 10px)!important;
	}

}

@media (max-width: 1025px){
	div.product-wrapper .product-right-section, div.product-wrapper .product-left-section {
	    float: none;
	    width: auto;
	    margin: 0px;
	}
}

@media (min-width: 661px){
	.navigation-bar{
		padding: 2px 0px;
	}

	div.top-area .logo{
		margin: 17px 0px;
	}

	.search-wrapper{
	    margin: 13px;
	}

	#place-order-button{
		margin-right: 10px;
		width: calc(100% - 20px);
    	white-space: normal;
	}

}

@media (max-width: 660px){

	#searchdropdown{
		display: block;
		text-align: center;
		padding: 15px 0px;
	}

	#carousel-wrapper, #carousel, #carousel .items > li{
		width: calc(100vw)!important;
		max-height: {{ settings.carousel_h }}px!important;
		height:  calc((100vw) / ({{ settings.carousel_w }} / {{ settings.carousel_h }}))!important;
	}

	ul.main-nav.navigation-menu,
	.account-links,
	a.cart, a.balance-info{
		float: none;
		margin: 0px;
		display: block;
	}


	ul.main-nav.navigation-menu > li > a, .account-links a, a.cart, a.balance-info {
	    display: block;
	    background: transparent;
	    border-bottom: 1px solid rgba(255,255,255,0.1);
	    color: #FFF;
        margin: 0px;
	    padding: 10px 0px;
	}

	#category-navigation h2 {
		text-align: center;
		width: 100%;
	}


}

