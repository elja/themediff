{% if available_shipping_addresses != empty %}
  <div class="form-item form-select">
    <div class="clrfix"><div>
      <select name="shipping_address_id" class="big-select address-dropdown">
        <option value='-1' selected="selected" disabled>choose address...</option>
        {% for address in available_shipping_addresses %}
          <option value="{{ address.id }}">{{ address.nickname }}</option>
        {% endfor %}
      </select>
    </div></div>
  </div>
{% endif %}
