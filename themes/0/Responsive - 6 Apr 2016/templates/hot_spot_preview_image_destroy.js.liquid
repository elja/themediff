(function () {
    var itemId = '#{{ hot_spot_preview_image | dom_id }}';
    var controller = $('div.try-it-on-controller').data('controller');

    var item = $(itemId);

    if (item.hasClass("selected")){
        var container = $(".try-it-on-dialog");
        container.find(".hot-spot-setting-container").html("");
        container.find(".hot-spot-image-container .hot-spot").remove();
        container.find(".hot-spot-image-container img").replaceWith("<img src='{{ 'no-image.jpg' | asset_url }}' class='preview-hot-spot-image'/>");
    }
    controller.deletePreviewImage(item);
}).call();