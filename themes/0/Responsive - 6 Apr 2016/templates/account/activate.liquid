<div class="sign-up-wrap">
  <div class="sign-up">

    <div class="content-block page-header">
        <h1>Activate Account</h1>
    </div>

    <div class="content-block">
        <div class="notice">
            <div class="centerized">
                Create your password to activate your account
            </div>
        </div>

        <div class="sign-up-form">
            {% form 'activate_account_password', context_name: 'f' %}
                {{ form.errors | default_errors }}

                {% form_field 'f.input',  'password' %}
                {% form_field 'f.input',  'password_confirmation' %}

                {% form_field 'f.submit', 'activate', {"class": "btn custom_btn custom-button btn-green"}  %}
            {% endform %}
        </div>
    </div>
  </div>
</div>
