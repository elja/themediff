<div class="sign-up-wrap">
<div class="sign-up">
    <div class="content-block">
        <h1>Resend Account Confirmation</h1>
    </div>
    <div class="content-block">
        <div class="sign-up-form">
        {% form 'resend_account_confirmation', context_name: 'f' %}
          {{ form.errors | default_errors }}

          {% form_field 'f.input', 'email' %}

          {% form_field 'f.submit', 'Submit', {"class": "btn custom_btn custom-button btn-green"} %}
        {% endform %}
        </div>
    </div>
</div>
</div>
