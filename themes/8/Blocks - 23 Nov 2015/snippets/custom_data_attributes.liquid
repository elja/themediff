<div class="custom-data-collections preview">
    {% for custom_data_collection in order.custom_data_collections %}
    <div class="data-collection">
        <div class="title">
            {{ custom_data_collection.title }}
        </div>
        <div class="attributes">
            {% for attribute in custom_data_collection.custom_data_attributes %}
            <div class="row">
                <span class="key">{{ attribute.key }}</span>
                <span class="colon">:</span>
                {% if attribute.value != blank %}
                <span class="value">{{ attribute.value | join: ', ' }}</span>
                {% else %}
                <span class="not-specified">&lt;not specified&gt;</span>
                {% endif %}
            </div>
            {% endfor %}
        </div>
    </div>
    {% capture mod %}{{ forloop.index | modulo:3 }}{% endcapture %}
    {% if mod == '0' %}
    <div style="clear:both; height: 10px;">
    </div>
    {% endif %}
    {% endfor %}
</div>
