/*-------------------*/
/* UPPER NAV */
/*-------------------*/
.content-navigation{
    background: #fff;
	padding: 30px 0 15px 0px;
	text-align: right;
}

.content-navigation .account-links{
	height: auto;
	line-height: normal;
	float: none;
	display: inline-block;
	margin: 0px;
}

ul.main-nav.navigation-menu{
	display: inline-block;
}

.content-navigation ul.main-nav.navigation-menu li a,
.content-navigation .account-links a,
a.cart, a.balance-info{
	border: none;
	margin: 0px;
	padding: 0px 15px;
	color: #000!important;
	font-size: 14px!important
}

a.balance-info{
	float: none;
	display: inline-block;
}

#upper-navigation i,
.content-navigation i {
    color: #36a7e9!important;
    padding: 0px 0px 0px 5px;
}

#upper-navigation ul.main-nav.navigation-menu{
	display: block;
}

#upper-navigation .content-navigation ul.main-nav.navigation-menu li a,
#upper-navigation a.cart, #upper-navigation a.balance-info{
	text-align: center;
	display: block;
	padding: 15px 0px;
}
/*-------------------*/
/* HEADER */
/*-------------------*/

.navigation-bar {
	display: none;
}

/*-------------------*/
/* CATEGORY NAV */
/*-------------------*/



#category-navigation{
	/* Permalink - use to edit and share this gradient: http://colorzilla.com/gradient-editor/#a1a1a1+0,c6c6c6+50,a1a1a1+100 */
	background: #a1a1a1; /* Old browsers */
	background: -moz-linear-gradient(left,  #a1a1a1 0%, #c6c6c6 50%, #a1a1a1 100%); /* FF3.6-15 */
	background: -webkit-linear-gradient(left,  #a1a1a1 0%,#c6c6c6 50%,#a1a1a1 100%); /* Chrome10-25,Safari5.1-6 */
	background: linear-gradient(to right,  #a1a1a1 0%,#c6c6c6 50%,#a1a1a1 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#a1a1a1', endColorstr='#a1a1a1',GradientType=1 ); /* IE6-9 */
	text-align: center;
    position: relative;
    background: #fff;
}

#category-navigation .search-wrapper{
	float: none;
    padding: 30px 25px;
}

#category-navigation .search input[type="text"]{
	background: #FFF;
	box-shadow: inset 0px 0px 5px 0px rgba(0,0,0,0.25);
}

#category-navigation .search input[type="submit"]{
	/* Permalink - use to edit and share this gradient: http://colorzilla.com/gradient-editor/#36a7e9+0,094989+100 */
	background: url({{'search.png' | asset_url}}), #36a7e9; /* Old browsers */
	background: url({{'search.png' | asset_url}}), -moz-linear-gradient(top,  #36a7e9 0%, #094989 100%); /* FF3.6-15 */
	background: url({{'search.png' | asset_url}}), -webkit-linear-gradient(top,  #36a7e9 0%,#094989 100%); /* Chrome10-25,Safari5.1-6 */
	background: url({{'search.png' | asset_url}}), linear-gradient(to bottom,  #36a7e9 0%,#094989 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#36a7e9', endColorstr='#094989',GradientType=0 ); /* IE6-9 */


	/*background-image: url({{'search.png' | asset_url}});*/
	background-position: center;
}

.category-navigation .container ul.level-0{
	text-align: left;
}

.category-navigation .container ul.level-0 > li > a{
	padding: 18px 0px;
    max-width: 200px;
    margin: 0px auto;
    text-transform: uppercase;
}

.category-navigation .container ul.level-0 > li:first-child > a{
	border-top: none;
}

.category-navigation .container ul.level-0 > li:last-child > a{
	border-bottom: none;
}

.category-navigation img{
	margin:88px 0px 155px;
}
/*-------------------*/
/* CONTENT */
/*-------------------*/
div.product-wrapper .product-left-section,
div.product-wrapper .product-right-section{
	float: none;
	width: auto;
}

.product-page .product-gallery,
.product-page .product-reviews-container{
	float: none;
	width: 100%;
}
