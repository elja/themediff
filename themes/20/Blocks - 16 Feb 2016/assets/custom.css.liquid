.page_content h1 {
  display: inline-block;
  font-size: 1.6em;
  font-weight: 600;
  text-transform: uppercase;
  z-index: 10;
  padding: 0px 10px 10px;
}

.page_content h2{
  color: {{ settings.content_link_hover_color }};
  font-size: 1.4em;
  font-weight: 400;
  margin: 0 10px 5px 10px;
}

.page_content p {
  margin: 0 10px 20px 10px;
}

.page_content h1 + .line, .content-block h1 + .line {
  margin: 5px 10px 10px 10px;
}

.page_content a{font-weight: normal;}

.page_content ul {
  margin-bottom: 20px;
}

.page_content .line, .content-block .line {
  display: block;
  height: 2px;
  width: 20%;
  z-index: -10;
}

.float-left-image {
  float: left;
  width: 33%;
  margin: 0 20px 10px 0;
}

.full-width-image {
  width: calc(100% - 20px);
  margin: 0 10px 20px 10px;
}

#our_team > div{ display: block;}

.banner-notification {
  background: #51a4c7;
  display: block;
  text-align: center;
  padding: 15px;
  color: white;
  font-weight: 600;
  margin: 10px 10px 20px 10px;
}

.page_content ul{margin-left:25px;}
.page_content ul, .page_content ul li{
  list-style: square;
}

.logoimage {
  margin: 0 10px 20px 10px;
  text-align: center;
}

.logoimage ul li {
  list-style: none;
  display: inline-block;
  margin: 0;
}

.logoimage ul li img {
  display: block;
  background: #e1e1e1;
  width: 125px;
  height: 125px;
  margin: 10px;
}

.page_content iframe {
  width: 100%;
  height: 400px;
}

/*SLIPPRY SLIDESHOW*/
.slippry_wrapper{
  position: relative;
}

.slideshowcontent{
	{% if settings.show_carousel_boxes == false %}
		display: none;
    {% endif %}
}

.slideshow_boxes{
  position: absolute;
  bottom: 36px;
  z-index: 10;
  width: 90%;
  max-width: 1200px;
  margin: 0 auto;
  -webkit-transform: translate(-50%,0%);
  -ms-transform: translate(-50%,0%);
  -moz-transform: translate(-50%,0%);
  -o-transform: translate(-50%,0%);
  transform: translate(-50%,0%);
  left: 50%;
  border-top: 1px solid rgba(255,255,255,0.75);
  padding-top: 20px;
  {% if settings.show_carousel_boxes == false %}
	display:none;
  {% endif %}
}

.boxlink {
  height: 190px;
  position: relative;
}

.boxlink:nth-child(1) {background: {{settings.slide_1_bg}};}
.boxlink:nth-child(2) {background: {{settings.slide_2_bg}};}
.boxlink:nth-child(3) {background: {{settings.slide_3_bg}};}

.boxlink h1 {
  font-weight: 400;
  padding: 30px 30px 0 30px;
  display: block;
  font-size: 1.1em;
  text-transform: uppercase;
}

.boxlink p {
  padding: 10px 30px 0 30px;
  font-size: .75em;
  line-height: 1.25em;
  font-weight: 300;
  letter-spacing: .025em;
}

.boxlink:nth-child(1) h1, .boxlink:nth-child(1) p{color: {{settings.slide_1_color}};}
.boxlink:nth-child(2) h1, .boxlink:nth-child(2) p{color: {{settings.slide_2_color}};}
.boxlink:nth-child(3) h1, .boxlink:nth-child(3) p{color: {{settings.slide_3_color}};}

.boxlink a:link, .boxlink a:visited {
  display: block;
  position: absolute;
  bottom: 30px;
  left: 30px;
  padding: 7.5px 35px 7.5px 15px;
  color: #ffffff!important;
  border: 1px solid #ffffff;
  font-size: .85em!important;
  -webkit-transition: all .25s linear;
  -moz-transition: all .25s linear;
  -ms-transition: all .25s linear;
  -o-transition: all .25s linear;
  transition: all .25s linear;
}

.boxlink a:hover, .boxes .boxlink a:active {
  background: #ffffff;
  color: {{settings.content_link_hover_color}}!important;
}

.slideshowcontent {
  position: absolute;
  left: 50%;
  bottom: 240px;
  width: 90%;
  max-width: 1200px;
  transform: translateX(-50%);
}

.slideshowcontent h1 {
  background: #FFFFFF;
  display: inline-block;
  padding: 10px;
  text-transform: uppercase;
  font-weight: 600;
  font-size: 1.5em;
  letter-spacing: .025em;
  margin-bottom: 10px;
}

.slideshowcontent h2 {
  background: {{ settings.content_heading_color }};
  color: #ffffff;
  display: inline-block;
  padding: 10px;
  font-weight: 400;
  font-size: 1.2em;
  letter-spacing: .025em;
  margin-bottom: 10px;
}

.slideshowcontent a:link, .slideshowcontent a:visited {
  display: inline-block;
  background: {{ settings.content_link_color }};
  text-decoration: none;
  color: #ffffff!important;
  padding: 10px;
  text-transform: uppercase;
  font-weight: 400;
  z-index: 10000;
  font-size: .8em!important;
  letter-spacing: .025em;
  -webkit-transition: all .25s linear;
  -moz-transition: all .25s linear;
  -ms-transition: all .25s linear;
  -o-transition: all .25s linear;
  transition: all .25s linear;
}

.slideshowcontent a:hover, .slideshowcontent a:active {
  background: {{settings.content_link_hover_color}};
}

.slideblock {
  display: block;
  height: 5px;
  background: #ffffff;
  position: absolute;
  width: 33.333333%;
  left: 0;
  bottom: -30px;
  z-index: 2000000;
}

#slippry_slideshow li:nth-child(1) .slideblock{left:0%;}
#slippry_slideshow li:nth-child(2) .slideblock{left:33.333333%!important;}
#slippry_slideshow li:nth-child(3) .slideblock{left:66.666666%!important;}


.sy-pager{margin-bottom: 1em!important;}
.sy-pager li.sy-active a{background-color: #606060!important;}

@media (max-width: 980px){
  .boxlink{height:125px;}

  .boxes .boxlink h1{font-size:1em;}

  .boxlink p{
    display: none;
  }

 .boxlink a:link, .boxlink a:visited{
    font-size: 0.75em!important;
    padding: 5px 35px 5px 15px;
    bottom:15px;
  }

  .slideshowcontent{bottom: 150px;}
  .slideshowcontent h1 {font-size: 1.15em;}
  .slideshowcontent h2 {font-size: .9em;}
  .slideshowcontent a:link, .slideshowcontent a:visited{font-size: .6em;}

  .slideshow_boxes{padding-top: 10px;}
  .slideblock {bottom:-15px;}
}

@media (max-width: 660px){
  .slideshow_boxes{
    position: relative;
    width:100%;
    transform: 0%;
  }
  .boxlink p{display: block;}
  .boxlink {height: 190px;}

  .boxlink a:link, .boxlink a:visited{
    font-size: 0.8em!important;
    padding: 7.5px 35px 7.5px 15px;
    bottom:30px;
  }

  .slideshowcontent{display:none;}

  .sy-pager{display: none!important;}

  .slideshow_boxes{padding-top: 0px; border:none;}
  .slideblock {display: none;}

}

