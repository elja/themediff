{% if template_name != 'catalog_page' and settings.show_content_box != false %}
<div class="col">
    <!-- BOX 1 -->
    <div class="box col_3">
        {{ settings.box_1_content }}
    </div>

    <!-- BOX 2 -->
    <div class="box col_3">
        {{ settings.box_2_content }}
    </div>
	
	<!-- BOX 3 -->
    <div class="box col_3">
        {{ settings.box_3_content }}
    </div>
</div>
{% endif %}

<div class="content-block">
    {{ special_page }}
</div>

{% if featured_products != empty %}

    <div class="content-block featured-products">
		<h1>Featured Products</h1>
        <div class="product-list">
            {% include 'product' with featured_products %}
        </div>
    </div>

    <script>
        $(function() {
            setup_carousels('.product-list .product .image-carousel');
            bind_product_body_clicker('.product-list', '.product');
        });
    </script>
{% endif %}
