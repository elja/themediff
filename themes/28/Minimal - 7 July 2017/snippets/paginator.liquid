{% if paginate.pages > 1 %}
<div class="pagination">
	<ul>

		<li class="prev">
			{% if paginate.previous.is_link %}
				{{ paginate.previous.title | link_to: paginate.previous.url }}
			{% else %}
				<span>{{ paginate.previous.title | escape }}</span>
			{% endif %}
		</li>


		{% for part in paginate.parts %}
			{% if part.is_link %}
				<li>
					{{ part.title | link_to: part.url }}
				</li>
			{% else %}
				{% if part.title == '&hellip;' %}
					<li class="ellipsis disabled">
						{{ part.title }}
					</li>
				{% else %}
					<li class="active">
						<span>{{ part.title }}</span>
					</li>
				{% endif %}
			{% endif %}
		{% endfor %}

		<li class="next">
			{% if paginate.next.is_link %}
				{{ paginate.next.title | link_to: paginate.next.url }}
			{% else %}
				<span>{{ paginate.next.title | escape }}</span>
			{% endif %}
		</li>

	</ul>
</div>
{% endif %}
