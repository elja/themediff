{
    "mrkdwn": true,
    "text": "*Order #{{ order.order_id }} Shipped* \n Your order from {{ store.name | escape_json }} has been shipped, click <{{ login_url }}|here> to login and review your order.",
    "attachments": [
        {
            "fallback": "",
            "color": "#354149",
            "title": "Shipping Information",
            "fields": [
                {
                    "title": "Shipping Method",
                    "value": "{{ shipment.shipment_friendly_name | escape_json }}",
                    "short": true
                },
                {% if shipment.tracking_number and shipment.tracking_number != empty %}
                    {
                        "title": "Tracking Number",
                        "value": "{{ shipment.tracking_number | escape_json }}",
                        "short": true
                    },
                {% endif %}
                {
                    "title": "Shipping State",
                    "value": "{{ shipment.state | escape_json }}",
                    "short": true
                }
            ]
        }
    ]
}
