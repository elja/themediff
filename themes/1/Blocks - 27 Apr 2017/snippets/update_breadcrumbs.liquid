{% if page.is_home_page %}
    {% breadcrumbs 'clear', 'all' %}
{% else %}
    {% if template_name == 'products' %}
        {% breadcrumbs 'clear', 'pages' %}
        {% breadcrumbs 'add', 'pages', title: 'Products', url: '/products' %}
        {% breadcrumbs 'clear', 'categories' %}
        {% if categories_filtering %}
            {% for category_filter in categories_filtering %}
                {% breadcrumbs 'add', 'categories', title: category_filter['name'], url: category_filter['url'] %}
            {% endfor %}
        {% endif %}
    {% else %}
        {% if template_name != 'product' %}
            {% breadcrumbs 'clear', 'categories' %}
        {% endif %}
        {% breadcrumbs 'clear', 'pages' %}
        {% breadcrumbs 'add', 'pages', title: page.title, url: page.url %}
    {% endif %}
{% endif %}
