/*--------------------*/
/* GENERAL */
/*--------------------*/

/*--------------------*/
/* HEADER */
/*--------------------*/
div.top-area{
	padding: 0px 0px 15px;
}


/*--------------------*/
/* NAVIGATION */
/*--------------------*/
.navigation-bar{
	padding: 5px 0px;
}

ul.main-nav.navigation-menu{
	text-align: left;
	display: inline-block;
}

.account-links{
	margin: 0px;
	height: auto;
	line-height: normal;
	float: none;
	display: inline-block;
}

ul.main-nav.navigation-menu > li > a,
a.cart, a.phone, a.balance-info,
.account-links a{
	display: inline-block;
	float: none;
	color: #FFF;
	border: none;
	margin: 0px;
	padding: 0px 5px;
}

ul.main-nav.navigation-menu > li > a:hover,
a.cart:hover, a.phone:hover, a.balance-info:hover,
.account-links a:hover{
	color: #FFF;
}
/*--------------------*/
/* CATEGORY NAV */
/*--------------------*/
.category-navigation h2{
	background: #18555E;
	color: #FFF!important;
	font-size: 14px;
	font-weight: bold;
	text-align: center;
    padding: 3px 0px;
}

#search-side{
	margin: 0px 0px 15px;
	border: 1px solid #E8E8E8;
	float: none;
}

#search-side .search input[type="text"]{
	float: none;
    width: 100px;
    display: block;
    margin: 5px auto 10px;
}

#search-side .search input[type="submit"]{
    float: none;
    display: block;
    margin: 0px auto 10px;
    border-radius: 4px;
}

.category-navigation .container{
	border: 1px solid #E8E8E8;
}

.category-navigation .container ul.level-0{
	padding: 20px 0px;
}
/*--------------------*/
/* CONTENT */
/*--------------------*/
.product-list .product{
	margin-right: 30px;
}

div.product-wrapper .product-right-section{
	width: 50%;
}

.product-page .total-info > div.add-to-cart-area{
	float: none;
}

.product-page .total-info > div.add-to-cart-area .btn{
	width: 100%;
}

a.edit-shipping, a.edit-budget a.edit-payment, a.edit-custom-data-collection{
	color: #FFF!important;
}
/*--------------------*/
/* FOOTER */
/*--------------------*/
.footer-block{
	width: 100%;
	float: none;
}

.footer-block ul.main-nav.navigation-menu > li > a, .footer-block a.cart{
	font-weight: normal;
}

.footer-block .main-nav.navigation-menu li, .footer-block a.cart{
	display: inline-block!important;
}
/*-----------------*/
/* REMOVE ELLIPSES */
/*-----------------*/
.recently-viewed-products .product,
.related-products .product{
  min-height: 225px;
}

.recently-viewed-products .product .footer label.product-name a,
.related-products .product .footer label.product-name a{
  width: auto;
  overflow: visible;
  text-overflow: inherit;
  white-space: normal;
}


.recently-viewed-products .product .footer,
.related-products .product .footer{
  max-height: none;
}

.form-radio label{
  width: 100%;
  overflow: visible;
}
/*--------------------*/
/* MEDIA QUERIES */
/*--------------------*/
@media (max-width: {{ settings.main_container_width }} ){
	#carousel-wrapper, #carousel, #carousel .items > li{
		width: calc(100vw - 220px)!important;
		max-height: {{ settings.carousel_h }}px!important;
		height:  calc((100vw - 220px) / ({{ settings.carousel_w }} / {{ settings.carousel_h }}) - 10px)!important;
	}

	#header{
		padding: 10px 0px 5px;
	}

	div.top-area {
	    padding: 0px 10px 15px;
	}
}

@media (max-width: 1025px){
	div.product-wrapper .product-right-section{
		width: auto;
	}
}

@media (min-width: 661px){
	#search{
		display: none!important;
	}

	.category-navigation .container ul.level-0 > li > a{
		padding: 3px 10px;
	}

	#right_content{
		width: calc(100% - 220px)!important;
		padding: 0px 0px 0px 20px;
	}
}

@media (max-width: 660px){
	#carousel-wrapper, #carousel, #carousel .items > li{
		width: calc(100vw - 20px)!important;
		max-height: {{ settings.carousel_h }}px!important;
		height:  calc((100vw - 20px) / ({{ settings.carousel_w }} / {{ settings.carousel_h }}) - 10px)!important;
	}

	#right_content{
		width: 100%!important;
	}

	#header{
		padding: 10px 0px 0px;
	}

	div.top-area .logo{
		width: 100%;
		max-width: 195px;
		background-size: contain;
		background-repeat: no-repeat;
	}

	#searchdropdown{
		display: block;
		text-align: center;
		padding: 20px 0px 10px;
	}

	.search input[type="text"]{
	    width: calc(100vw - 75px);
	}

	.navigation-bar{
		padding: 0px;
	}

	#top-menu ul.main-nav.navigation-menu, #top-menu a.cart, #top-menu a.phone, #top-menu a.balance-info, #top-menu .account-links{
		float: none;
		display: block;
		text-align: center;
	}

	#top-menu ul.main-nav.navigation-menu > li > a, #top-menu a.cart, #top-menu a.phone, #top-menu a.balance-info, #top-menu .account-links a{
		display: block;
		text-align: center;
		border-bottom: 1px solid rgba(255,255,255,0.25);
		padding: 10px 0px;
	}

	.category-navigation .container{
		border: none;
	}

	.category-navigation .container ul.level-0{
		padding: 0px;
	}

	.category-navigation h2{
		padding: 10px;
	}

	#search-side{
		display: none;
	}

	.main{
		float: none;
	}
}

